local cloneref = cloneref or function(...) return ... end
local ReplicatedStorage = cloneref(game:GetService("ReplicatedStorage"))
local BufferRemote = ReplicatedStorage:WaitForChild("ByteNetReliable", math.huge)

local function hitBuffer(EntityId)
    local byteStr = string.char(
        15,
        1,
        0,
        EntityId % 256,
        math.floor(EntityId / 256) % 256,
        math.floor(EntityId / 65536) % 256,
        0
    )
    BufferRemote:FireServer(buffer.fromstring(byteStr))
    return buffer.fromstring(byteStr)
end
